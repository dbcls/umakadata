{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2015
  },
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "semi": "error",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ]
  },
  "plugins": [],
  "globals": {
    "$": true
  }
}
